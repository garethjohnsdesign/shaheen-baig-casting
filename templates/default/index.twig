{% set bodyClass = 'home' %}

{% if entry.seoTitle | length %}
{% set seoTitle = entry.seoTitle %}
{% else %}
{% set seoTitle = entry.title %}
{% endif %}

{% if entry.seoDescription | length %}
{% set seoDescription = entry.seoDescription %}
{% endif %}

{% set projects = entry.projects.orderBy('RAND()').all() %}

{% extends "default/_layouts/site" %}

{% block navigation %}
{% include "_includes/global/navigation" %}
{% endblock %}

{% block main %}


{# Hero #}
{% set projectCount = projects|length %}
<section class="home__hero grid-y align-center">

  <div class="swiper-container home__hero__image" id="carousel--hero" data-aos="fade-in" data-aos-delay="100">
    <div class="swiper-wrapper">
      {% for project in projects %}
      {% set image = project.image.one() %}
      <div class="swiper-slide small-12 cell">
          <div class="image--hero align-center-middle" data-interchange="{% include "_includes/images/full/full/interchange-img-small-12-medium-12" %}">

        <div class="grid-y height-100 align-center content">
          <div class="shrink cell text-center">
          <a href="{{ project.url }}" class="white">
            <h1 class="serif-display text-uppercase">{{project.title}}</h1>
            {{project.with}}

          </a>
          </div>
        </div>

          </div>
      </div>
      {% endfor %}
    </div>
  </div>

</section>
{# End Hero #}

{% endblock %}


{% block footer %}
{% include "_includes/global/footer" %}
{% endblock %}

