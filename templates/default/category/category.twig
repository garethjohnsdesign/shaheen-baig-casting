{% set bodyClass = 'category' %}
{% set projects = craft.entries
.relatedTo(category)
.orderBy('postDate desc')
.all() %}

{% set seoTitle = category.title %}

{% if category.seoDescription | length %}
{% set seoDescription = category.seoDescription %}
{% endif %}

{% extends "_layouts/site" %}

{% block navigation %}
{% include "_includes/global/navigation" %}
{% endblock %}

{% block main %}

<!-- Projects -->
{% set projectCount = projects|length %}
<div class="grid-container padding-bottom-2">

<div class="grid-x grid-padding-x grid-padding-y align-center">
  <div class="small-12 cell text-center padding-bottom-0">
    <ul class="menu small sans-regular text-uppercase letter-spacing--loose align-center">
      {% nav menu in craft.categories.group('typeOfProject').all() %}
        <li class="{{ menu.slug == category.slug ? 'underline' }}">
         <a href="{{ menu.url }}" class="">{{ menu.title }}</a>
        </li>
      {% endnav %}
    </ul>
  </div>
</div>


<div class="grid-x grid-padding-x grid-padding-y {% if projectCount > 2 %}align-left{% else %}align-center{% endif %}">
  {% for project in projects %}
    <div class="small-12 medium-6 {% if projectCount > 2 %}xlarge-4{% else %}xlarge-4{% endif %} xxlarge-4 cell padding-bottom-0">
    {% include "_includes/blocks/excerpt" %}
    </div>
  {% endfor %}
</div>
</div>
<!-- End Projects -->
{% endblock %}


{% block footer %}
{% include "_includes/global/footer" %}
{% endblock %}